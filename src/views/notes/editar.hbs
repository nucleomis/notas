<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
           <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/editar_nota/{{nota._id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="Titulo" value="{{nota.titulo}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control">{{nota.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <div class="d-grid gap-1 mt-3">
                        <button class="btn btn-primary" type="submit">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>